<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Orangtua.Identitas_Keluarga_Lengkap">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tollbarianak"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/baground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Nama Anak"
                    android:textColor="#FFFFFF">
                </TextView>

                <EditText
                    android:id="@+id/txt_nama_anak"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_text_form"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Nama Anak"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorSubTitle" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Tempat Lahir"
                    android:textColor="#FFFFFF">
                </TextView>


                <EditText
                    android:id="@+id/txt_tempat_lahir"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Masukkan Tempat Lahir"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorSubTitle"
                    android:background="@drawable/input_text_form"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text=" Tanggal Lahir"
                    android:textColor="#FFFFFF">
                </TextView>


                <EditText
                    android:id="@+id/txt_tanggal_lahir"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Masukkan Tanggal Lahir"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorSubTitle"
                    android:background="@drawable/input_text_form"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Jenis Kelamin"
                    android:textColor="#FFFFFF">
                </TextView>


                <EditText
                    android:id="@+id/txt_jenis_kelamin"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Masukkan Jenis Kelamin"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorSubTitle"
                    android:background="@drawable/input_text_form"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Agama"
                    android:textColor="#FFFFFF">
                </TextView>

                <EditText
                    android:id="@+id/txt_agama"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_text_form"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Masukkan Agama"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorSubTitle" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:text="Anak ke-"
                    android:textColor="#FFFFFF">
                </TextView>


                <EditText
                    android:id="@+id/txt_anak_ke"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="Anak ke-"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorSubTitle"
                    android:background="@drawable/input_text_form"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/save"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="@color/graylight"
                    style="@style/loginButton"
                    android:layout_gravity="right"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"/>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>